{
  "name": "ag-ui",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all build:lib dev:vite",
    "dev:vite": "vite",
    "build": "npm-run-all build:lib build:app",
    "build:app": "tsc && vite build --mode app && npm run postbuild:app",
    "postbuild:app": "shx cp dist/style.css build/style.css",
    "build:lib": "tsc --p tsconfig.build.json && vite build && npm run postbuild",
    "postbuild": "shx mv dist/ag-ui.css dist/style.css",
    "lint": "eslint .",
    "test": "vitest",
    "preview": "npm-run-all build:app preview:serve",
    "preview:serve": "vite preview --outDir build"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/ag-ui.umd.js",
  "module": "./dist/ag-ui.es.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/style.css",
  "exports": {
    ".": {
      "import": "./dist/ag-ui.es.js",
      "require": "./dist/ag-ui.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/js-beautify": "^1.14.3",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "js-beautify": "^1.15.4",
    "jsdom": "^27.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "shx": "^0.3.4",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14",
    "vitest": "^4.0.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
